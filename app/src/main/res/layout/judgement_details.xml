<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGrey">

    <TextView
        android:id="@+id/num_water_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#0D000000"
        android:textSize="44sp" />

    <LinearLayout
        android:id="@+id/judgement_detail_ll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/judgement_detail_tv_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/activity_margin_textview_button"
            android:layout_marginRight="@dimen/activity_margin_textview_button"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_bg"
            android:gravity="center"
            android:padding="@dimen/activity_padding_textview_button"
            android:text="Full Judgment"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/judgement_detail_ll_view"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/logo" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:id="@+id/judgement_detail_tv_jdg_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Judgment Type"
                    android:textColor="@color/colorBlack50"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/judgement_detail_tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/judgement_detail_tv_headnote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Headnote"
                    android:textColor="@color/colorBlack50"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/judgement_detail_tv_short_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Citation"
                    android:textColor="@color/colorBlack50"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/judgement_detail_tv_case_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/judgement_detail_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Title"
                    android:textColor="@color/colorGrey20"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Case Type"
                    android:textColor="@color/colorBlack50"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/judgement_detail_tv_case_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/colorGrey25"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Court"
                    android:textColor="@color/colorBlack50"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/judgement_detail_tv_court"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/colorGrey25"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Date of Judgement"
                    android:textColor="@color/colorBlack50"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/judgement_detail_tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/colorGrey25"
                    android:textSize="20sp"
                    android:visibility="gone" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</RelativeLayout>