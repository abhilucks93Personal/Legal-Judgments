<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/users_list_item_tv_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text=""
            android:layout_toLeftOf="@+id/judgement_list_item_tv_date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorGrey20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/judgement_list_item_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text=""
            android:layout_alignParentRight="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorGrey20"
            android:textStyle="bold" />



    </RelativeLayout>

    <TextView
        android:id="@+id/users_list_item_tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorBlack50"
        android:textStyle="italic" />

</LinearLayout>